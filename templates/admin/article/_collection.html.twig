{% block _article_images_widget %}
	<p>Vous pouvez, ajouter votre prope image</p>
	{{ form_widget(form)}}
	<input type="hidden" id="widgets-counter" value="0">

	<div class="form-group">
		<button class="btn btn-primary" type="button" id="add-image">
			<i class="fas fa-plus"></i>
			Ajouter
		</button>
	</div>
{% endblock %}

{% block _article_images_entry_row %}
	{{ form_widget(form) }}
{% endblock %}

{% block _article_images_entry_widget %}
	<div class="from-group" id="block_{{id}}">
		<div class="row">
			<div class="col-10">
				<div class="row">
					<div class="col">
						{% if value %}
							{% if value.url %}
                                {{ value.url }}
                            {% else %}
                                {{value.fileName}}
                            {% endif %}
                            
						{% endif %}
						{{  form_widget(form.fileName)}}
						{{  form_errors(form.fileName)}}
					</div>
					<div class="col">
						{{  form_widget(form.caption)}}
						{{  form_errors(form.caption)}}
					</div>
				</div>
			</div>
		</div>
		<div class="col-2">
			<button class="btn btn-danger" type="button" data-action="delete" data-target="#block_{{id}}">
				<i class="fas fa-trash"></i>
			</button>
		</div>
	</div>
{% endblock %}
