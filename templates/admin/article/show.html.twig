{% extends 'base.html.twig' %}

{% block title %}Article{% endblock %}

{% block body %}
    <h1>Article</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ article.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ article.name }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ article.content }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-primary " href="{{ path('article_admin_index') }}">Retour a la liste</a>

    <a class="btn btn-success " href="{{ path('article_admin_edit', {'id': article.id}) }}">Modifier</a>

    {{ include('admin/article/_delete_form.html.twig') }}
{% endblock %}
