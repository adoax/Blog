{% extends 'base.html.twig' %}

{% block title %}Article index{% endblock %}

{% block body %}
    <h1 class="text-center pt-3 pb-5">Article index</h1>

    <table class="table table-striped text-center">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Content</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for article in articles %}
            <tr>
                <td>{{ article.id }}</td>
                <td>{{ article.name }}</td>
                <td>{{ article.ExtraitContent }}</td>
                <td class="d-inline-flex">
                    <a class="btn btn-success" href="{{ path('article_admin_edit', {'id': article.id}) }}">Modifier</a>
                    {{ include('admin/article/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">Aucun a article</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-primary btn-block btn-lg text-center" href="{{ path('article_admin_new') }}">Cr√©ation d'un nouveau article</a>
{% endblock %}
