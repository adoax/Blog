{% extends 'base.html.twig' %}

{% block title %}Article index{% endblock %}

{% block body %}
    <h1 class="text-center pt-3 pb-5">Article index</h1>

    <table class="table table-striped text-center">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Content</th>
                <th>actions</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for article in articles %}
            <tr>
                <td>{{ article.id }}</td>
                <td>{{ article.name }}</td>
                <td>{{ article.content }}</td>
                <td>
                    <a class="btn btn-primary" href="{{ path('article_admin_edit', {'id': article.id}) }}">Modifier</a>
                    {{ include('admin/article/_delete_form.html.twig') }}
                </td>
                <td>
                    <form action="{{ path('article_multiple_admin_delete', {'id': article.id}) }}" onsubmit="return confirm('Voulait vous vraiment supprimer cette article ?');" class="form-check">
                        <input type="checkbox" class="form-check-input">
                        <input type="hidden" name="_method" value="DELETE">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ article.id) }}">
                    </td>
                    
                </tr>
                {% else %}
                <tr>
                    <td colspan="4">Aucun a article</td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
        <button class="btn btn-danger">Suppresion Multiple</button>
    </form>

    <a class="btn btn-primary btn-block btn-lg text-center" href="{{ path('article_admin_new') }}">Cr√©ation d'un nouveau article</a>
{% endblock %}
