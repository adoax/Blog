<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
        <script src="https://kit.fontawesome.com/e984abdad0.js" crossorigin="anonymous"></script>
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %} {% endblock %}
    </head>
    <body>
<header>
            <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <a class="navbar-brand" href="{{ path('article_index')}}">Navbar</a>
            <div class="collapse navbar-collapse" id="navbarNav">
              <ul class="navbar-nav">
                <li class="nav-item dropdown">
                  <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Menu</a>
                  <div class="dropdown-menu">
                    <a class="dropdown-item" href="{{ path('article_index') }}">Article</a>
                    <a class="dropdown-item" href="{{ path('category_index') }}">Categories</a>
                    <a class="dropdown-item" href="{{ path('index_react') }}">React (article) </a>
                  </div>
                </li>
                {% if app.user %}                
                  {% if app.user.roles.0 == 'ROLE_ADMIN' %}
                    <li class="nav-item">
                      <a class="nav-link" href="{{ path('home_admin') }}">Admin</a>
                    </li>
                  {% endif %}
                {% endif %}
                
                <li class="nav-item">
                <a class="nav-link" href="{% if app.user %} {{path('app_profil')}} {%  else %} {{ path('app_login') }} {% endif %}">{% if app.user %}Profil {% else %} Se connecter {% endif %}
                    </a>
                  </li>
              </ul>
            </div>
          </nav>
</header>
        {% block body %}{% endblock %}

        <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>

        {% block javascripts %}
         {{ encore_entry_script_tags('js/app') }}
        {% endblock %}
    </body>
</html>
