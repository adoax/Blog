{% extends 'base.html.twig' %} {% block title %}Article index{% endblock %} {%
block body %}

<div class="container pt-5">
  {% for message in app.flashes('accesDenied') %}
  <div class="alert alert-danger text-center">
    {{ message }}
  </div>
  {% endfor %}
  <div class="row">
    {% for article in articles %}
    <div class="col-3">
      <div class="card text-white bg-primary mb-3" style="max-width: 18rem;">
        <div class="card-header">{{ article.name }}</div>
        <div class="card-body">
          <h5 class="card-title">Extrait</h5>
          <p class="card-text">
            {{ article.content }}
          </p>
          <a
            href="{{ path('article_show', { id: article.id }) }}"
            class="btn btn-success btn-block"
            >Voir plus</a
          >
        </div>
      </div>
    </div>
    {% else %}
  </div>
  <tr>
    <td colspan="4">Aucun a article</td>
  </tr>
  {% endfor %}
</div>

{% endblock %}
