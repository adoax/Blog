{% extends 'base.html.twig' %} {% block title %}Article index{% endblock %} {%
block body %}

<div class="container pt-5">
  {% for messages in app.flashes(['accesDenied', 'logout']) %} {% for message in
  messages %}
  <div class="alert alert-danger">
    {{ message }}
  </div>
  {% endfor %} {% endfor %}

  <div class="row">
    {% for article in articles %}
    <div class="col-3">
      <div class="card text-white bg-primary mb-3" style="max-width: 18rem;">
        <div class="cardheader">

          
          {% cache 'images' ~ article.UpdatedAt.timestamp
          article.UpdatedAt.timestamp %}

          {% for image in article.images |slice(0, 1) %}
            <img class="img-fluid" src="{{ vich_uploader_asset(image, 'fileName')  | imagine_filter('thumbs')  }}"/>
          {% endfor %}
          
          {% endcache %}
        </div>
        <div class="card-body">

          {% cache 'options' ~ article.UpdatedAt.timestamp
          article.UpdatedAt.timestamp %}

            <p>Villes: {{ article.options | join(', ') }}</p>

          {% endcache %}

          <p class="card-text">
            {{ article.ExtraitContent }}
          </p>
          <a
            href="{{
              path('article_show', { id: article.id, slug: article.slug })
            }}"
            class="btn btn-success btn-block"
            >Voir plus</a
          >
        </div>
      </div>
    </div>
    {% else %}
  </div>
  <tr>
    <td colspan="4">Aucun a article</td>
  </tr>
  {% endfor %}
</div>

{# display navigation #}
<div class="navigation">
  {{ knp_pagination_render(articles) }}
</div>


{% endblock %}



{% block stylesheets %}
  <style>
    .card {
      border: none !important;
    }
  </style>
{% endblock %}